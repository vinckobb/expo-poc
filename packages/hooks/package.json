{
  "private": true,
  "name": "@monorepo/hooks",
  "version": "0.0.0",
  "main": "./build/index.js",
  "exports": {
    ".": {
      "react-native": "./build/index.js",
      "default": "./build/index.web.js"
    }
  },
  "files": [
    "build",
    "src"
  ],
  "scripts": {
    "dev": "tsup --watch --silent",
    "dev:android": "npm run dev",
    "dev:ios": "npm run dev",
    "build": "tsup --clean"
  },
  "dependencies": {
    "@monorepo/constants": "*"
  },
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.8",
    "@types/react": "~18.3.18",
    "react": "18.3.1",
    "react-native": "0.76.7",
    "tsup": "^8.3.5"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "peerDependenciesMeta": {
    "react-native": {
      "optional": true
    },
    "react-native-web": {
      "optional": true
    }
  },
  "tsup": {
    "entry": {
      "index": "src/index.ts",
      "index.web": "src/index.web.ts"
    },
    "outDir": "build",
    "sourcemap": true,
    "dts": true,
    "external": [
      "react",
      "react-native"
    ]
  }
}
