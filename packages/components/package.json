{
  "private": true,
  "name": "@monorepo/components",
  "version": "0.0.0",
  "main": "./build/index.js",
  "exports": {
    ".": {
      "react-native": "./build/index.js",
      "default": "./build/index.web.js"
    }
  },
  "files": [
    "build",
    "src"
  ],
  "scripts": {
    "dev": "tsup --watch --silent",
    "lint": "eslint --ext js,ts,tsx .",
    "test": "jest",
    "build": "tsup --clean"
  },
  "dependencies": {
    "@monorepo/constants": "*",
    "@monorepo/hooks": "*",
    "@monorepo/theme": "*",
    "react-native-maps": "^1.20.1"
  },
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.8",
    "tsup": "^8.3.5"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*",
    "react-native-safe-area-context": "*"
  },
  "peerDependenciesMeta": {
    "react-native": {
      "optional": true
    },
    "react-native-web": {
      "optional": true
    }
  },
  "tsup": {
    "entry": {
      "index": "src/index.ts",
      "index.web": "src/index.web.ts"
    },
    "outDir": "build",
    "sourcemap": true,
    "dts": true,
    "external": [
      "react",
      "react-native",
      "react-native-safe-area-context"
    ]
  }
}
